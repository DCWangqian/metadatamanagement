<div block-ui="blockRelatedDataSetContainer">
<div  ng-if="RelatedDataSetController.dataSets.totalHits !== 0" class="fdz-InfiniteScroll">
    <md-virtual-repeat-container id="vertical-container" ng-style="{{RelatedDataSetController.style}}">
     <div md-virtual-repeat="dataSet in RelatedDataSetController.dataSets" md-on-demand
         class="fdz-repeated-item" flex>
         <dataset-search-result search-result="dataSet._source"></dataset-search-result>
     </div>
   </md-virtual-repeat-container>
</div>
  <div ng-if="RelatedDataSetController.dataSets.totalHits === 0" layout-margin>
    <span>{{'data-set-management.detail.no-related-data-sets' | translate }}</span>
  </div>
</div>
