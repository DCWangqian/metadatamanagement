<div class="container" ng-cloak>
    <div class="container">

        <md-content>
            <md-tabs md-dynamic-height md-border-bottom>
                <md-tab label="{{'global.menu.entities.variable'|translate}}">
                    <div ng-controller="VariableController">
                        <md-content class="md-padding">
                            <md-input-container class="md-block" ng-model="query" ng-keyup="search(1)" autocomplete="off" autofocus="autofocus">
                                <label>{{'global.menu.search.variablesearch'|translate}}</label>
                                <input ng-model="user.title">
                                <md-icon md-font-set="material-icons">search</md-icon>
                            </md-input-container>

                            <md-toolbar class="md-hue-3">
                                <div class="md-toolbar-tools">
                                    <span class="panel-title" data-translate="variablesearch.variablelist" data-translate-values="{'totalHits':{{page.totalHits}},'minHitNumber':{{page.getMinHitNumber()}},'maxHitNumber':{{page.getMaxHitNumber()}}}">Showing hits 1-10</span>
                                </div>
                            </md-toolbar>
                            <md-list>
                                <md-list-item class="md-3-line" ng-repeat="result in searchResult" ng-click="null" flex>
                                    <div class="md-list-item-text" layout="column">
                                        <h3>{{result._source.label}}</h3>
                                        <h4>{{result._source.name}}</h4>
                                        <p>{{result._source.dataAcquisitionProjectId}}</p>
                                    </div>
                                </md-list-item>
                                <md-divider ></md-divider>
                            </md-list>
                            <ul class="pager" ng-show="page.totalHits>0">
                                <li class="previous">
                                    <a class="btn" ng-disabled="!page.hasPreviousPage()" ng-click="previousPage()">&larr;
                                        {{'pagination.previous'|translate}}</a>
                                </li>
                                <li class="hidden-xs">
                                    <a>
                                        <span data-translate="variablesearch.numberofpages" data-translate-values="{'currentPageNumber':{{page.currentPageNumber}},'totalNumberOfPages':{{page.getTotalNumberOfPages()}}}">Page 1 of 1</span>
                                    </a>
                                </li>
                                <li class="next">
                                    <a class="btn" ng-disabled="!page.hasNextPage()" ng-click="nextPage()">{{'pagination.next'|translate}}
                                        &rarr;</a>
                                </li>
                            </ul>
                        </md-content>
                    </div>
                </md-tab>
            </md-tabs>
        </md-content>

        <div class="row">
            <div class="col-md-4 col-md-offset-2" title="{{'global.dzhwAltText'|translate}}">
                <a class="navbar-brand dzhw_logo" ng-href="{{'metadatamanagementApp.main.dzhwUrl'|translate}}"></a>
            </div>
            <div class="col-md-4" title="{{'global.bmbfAltText'|translate}}">
                <a class="{{'global.bmbfClass' |translate}}" ng-href="{{'metadatamanagementApp.main.bmbfUrl'|translate}}"></a>
            </div>
        </div>
    </div>
</div>
