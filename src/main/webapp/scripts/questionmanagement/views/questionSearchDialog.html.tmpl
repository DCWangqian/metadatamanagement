<md-dialog aria-label="{{'question-management.detail.questions' | translate }}" style="width: 70%;">
    <md-toolbar>
        <div class="md-toolbar-tools">
            <h2>{{'question-management.detail.questions' | translate }}</h2>
            <div flex></div>
            <md-button class="md-icon-button" ng-click="ctrl.closeDialog()">
                <md-icon md-svg-src="/assets/images/icons/ic_close_white_24px.svg" aria-label="Close dialog"></md-icon>
            </md-button>
        </div>
    </md-toolbar>
    <md-dialog-content>
        <div block-ui="blockRelatedQuestionContainer">
            <div class="fdz-InfiniteScroll">
                <md-virtual-repeat-container id="vertical-container">
                    <div data-md-virtual-repeat="item in ctrl.infiniteItems" data-md-on-demand flex>
                        <md-card ui-sref="questionDetail({questionNumber:item._source.number,
                          instrumentNumber:item._source.instrumentNumber,
                          projectId:item._source.dataAcquisitionProjectId})" class="fdz-search-result">
                            <md-card-header class="fdz-card-header-border">
                                <md-card-avatar>
                                    <md-icon md-svg-src="/assets/images/icons/question.svg" class="fdz-search-result-icon"></md-icon>
                                </md-card-avatar>
                                <md-card-header-text class="fdz-truncate-string">
                                    <div class="md-title fdz-truncate-string">{{'question-management.detail.question' | translate}}
                                        {{item._source.number}}:
                                        {{item._source.instrumentDescription}}
                                        ({{item._source.id}})</div>
                                    <div class="md-subhead fdz-truncate-string">{{item._source.type}}</div>
                                </md-card-header-text>
                            </md-card-header>
                            <md-card-content>
                                <div>{{item._source.questionText}}</div>
                            </md-card-content>
                        </md-card>
                    </div>
                </md-virtual-repeat-container>
            </div>
        </div>
    </md-dialog-content>
</md-dialog>
