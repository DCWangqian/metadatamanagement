<md-card>
  <a class="fdz-search-result"
    ui-sref="studyDetail({id: searchResult.masterId, 'search-result-index': searchResultIndex, version: searchResult.shadow ? searchResult.release.version: ''})">
    <md-card-header class="fdz-card-header-border">
      <md-card-header-text class="fdz-truncate-string">
        <div class="md-title fdz-truncate-string">
          <span display-i18n-string="searchResult.title"></span>
        </div>
        <div class="md-subhead fdz-truncate-string">
                    <span ng-repeat="author in searchResult.authors">
                    <span>{{author.lastName}}, </span>
                    <span ng-if="!author.middleName">{{author.firstName}}{{!$last?';':''}}</span>
                    <span ng-if="author.middleName">{{author.firstName}} {{author.middleName}}{{!$last?';':''}}</span>
                    </span>
        </div>
      </md-card-header-text>
    </md-card-header>
    <md-card-content>
      <div class="fdz-text-block fdz-multiline-property" display-i18n-string="searchResult.description" fdz-hyphenate
           limit-to="256"></div>
    </md-card-content>
  </a>
  <div class="fdz-search-result-actions-container" data-has-any-authority="ROLE_PUBLISHER, ROLE_DATA_PROVIDER"
       ng-if="!projectIsCurrentlyReleased">
    <md-button class="md-icon-button md-primary" ng-click="studyEdit()">
      <md-tooltip md-autohide="true" md-direction="left" md-z-index="bowser.mobile || bowser.tablet ? -100 : 100001">
        {{'search-management.buttons.edit-study-tooltip' | translate}}
      </md-tooltip>
      <md-icon md-font-set="material-icons">mode_edit</md-icon>
    </md-button>
  </div>
</md-card>
