<md-card md-ink-ripple="true">
  <a ui-sref="surveyDetail({id:searchResult.id})" class="fdz-search-result">
    <md-card-header class="fdz-card-header-border">
        <md-card-avatar>
            <md-icon md-svg-src="/assets/images/icons/survey.svg" class="fdz-search-result-icon"></md-icon>
        </md-card-avatar>
        <md-card-header-text class="fdz-truncate-string">
            <span class="md-title fdz-truncate-string">{{searchResult.title}}</span>
            <span class="md-subhead fdz-truncate-string">{{searchResult.id}}</span>
        </md-card-header-text>
    </md-card-header>
  </a>
    <md-card-content>
          <div layout="row" layout-xs="column" class="fdz-truncate-string">
            <div class="fdz-search-result-label">
              Feldzeit:
            </div>
            <div class="fdz-truncate-string">
              {{searchResult.fieldPeriod.start | date}} - {{searchResult.fieldPeriod.end | date}}
            </div>
          </div>
    </md-card-content>
</md-card>
