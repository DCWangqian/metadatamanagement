<md-card>
  <a ui-sref="questionDetail({id:searchResult.id})" md-ink-ripple class="fdz-search-result">
        <md-card-header class="fdz-card-header-border">
            <md-card-avatar>
                <md-icon md-svg-src="/assets/images/icons/question.svg" class="fdz-search-result-icon"></md-icon>
            </md-card-avatar>
            <md-card-header-text class="fdz-truncate-string">
                <div class="md-title fdz-truncate-string">{{'question-management.detail.question' | translate}} {{searchResult.number}}: {{searchResult.instrument.description[currentLanguage]}} <span class="label label-as-badge label-default">{{searchResult.id}}</span></div>
                <div class="md-subhead fdz-truncate-string">{{searchResult.type[currentLanguage]}}</div>
            </md-card-header-text>
        </md-card-header>
        <md-card-content>
            <div>{{searchResult.questionText[currentLanguage]}}</div>
        </md-card-content>
    </a>
</md-card>
