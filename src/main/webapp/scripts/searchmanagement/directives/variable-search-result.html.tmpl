<md-card ui-sref="variableDetail({id:searchResult.id})" class="fdz-search-result">
    <md-card-header class="fdz-card-header-border">
        <md-card-avatar>
            <md-icon md-svg-src="/assets/images/icons/variable.svg" class="fdz-search-result-icon"></md-icon>
        </md-card-avatar>
        <md-card-header-text class="fdz-truncate-string">
            <div class="md-title fdz-truncate-string">{{searchResult.label}}</div>
            <div class="md-subhead fdz-truncate-string">{{searchResult.name}}
                ({{searchResult.dataType}},
                {{searchResult.scaleLevel}})</div>
        </md-card-header-text>
    </md-card-header>
    <md-card-content>
      <div layout="row" layout-xs="column" >
          <div class="fdz-search-result-label">
              {{ 'variable-management.labels.surveyed-in' | translate}}
          </div>
          <div layout="column">
              <div class="fdz-truncate-string" ng-repeat="title in searchResult.surveyTitles">
                  <md-icon md-svg-src="/assets/images/icons/survey.svg" class="fdz-inline-icon"></md-icon>
                  {{title}}
              </div>
          </div>
      </div>
    </md-card-content>
</md-card>
