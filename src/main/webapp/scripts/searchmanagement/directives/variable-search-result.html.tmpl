<md-card>
    <a ui-sref="variableDetail({'id': searchResult.id})" class="fdz-search-result">
        <md-card-header class="fdz-card-header-border">
            <md-card-avatar>
                <md-icon md-svg-src="/assets/images/icons/variable.svg" class="fdz-search-result-icon"></md-icon>
            </md-card-avatar>
            <md-card-header-text class="fdz-truncate-string">
                <div class="md-title fdz-truncate-string">{{searchResult.label[currentLanguage]}} <span class="label label-as-badge label-default">{{searchResult.id}}</span></div>
                <div class="md-subhead fdz-truncate-string">{{searchResult.name}} ({{searchResult.dataType[currentLanguage]}}, {{searchResult.scaleLevel[currentLanguage]}})
                </div>
            </md-card-header-text>
        </md-card-header>
        <md-card-content>
            <div layout="row" layout-xs="column">
                <div class="fdz-search-result-label">
                    {{ 'variable-management.labels.surveyed-in' | translate}}
                </div>
                <div layout="column">
                    <div class="fdz-truncate-string" ng-repeat="survey in searchResult.surveys">
                        {{survey.title[currentLanguage]}}
                    </div>
                </div>
            </div>
        </md-card-content>
    </a>
</md-card>
