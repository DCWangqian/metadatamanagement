<div>
    <h2 data-translate="metadatamanagementApp.dataAcquisitionProject.home.title">DataAcquisitionProjects</h2>
    <jh-alert></jh-alert>
    <div class="container">
        <div class="row">
            <div class="col-md-4">
                <button class="btn btn-primary" ui-sref="dataAcquisitionProject.new">
                    <span class="glyphicon glyphicon-flash"></span> <span data-translate="metadatamanagementApp.dataAcquisitionProject.home.createLabel">Create a new DataAcquisitionProject</span>
                </button>
            </div>
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr jh-sort="predicate" ascending="reverse" callback="loadAll()">
                    <th jh-sort-by="id"><span data-translate="global.field.rdcId">RDC Id</span> <span class="glyphicon glyphicon-sort"></span></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="dataAcquisitionProject in dataAcquisitionProjects track by dataAcquisitionProject.id">
                    <td><a ui-sref="dataAcquisitionProject.detail({id:dataAcquisitionProject.id})">{{dataAcquisitionProject.id}}</a></td>
                    <td>
                        <button type="submit"
                                ui-sref="dataAcquisitionProject.detail({id:dataAcquisitionProject.id})"
                                class="btn btn-info btn-sm">
                            <span class="glyphicon glyphicon-eye-open"></span>&nbsp;<span data-translate="entity.action.view"> View</span>
                        </button>
                        <button type="submit"
                                ui-sref="dataAcquisitionProject.edit({id:dataAcquisitionProject.id})"
                                class="btn btn-primary btn-sm">
                            <span class="glyphicon glyphicon-pencil"></span>&nbsp;<span data-translate="entity.action.edit"> Edit</span>
                        </button>
                        <button type="submit"
                                ui-sref="dataAcquisitionProject.delete({id:dataAcquisitionProject.id})"
                                class="btn btn-danger btn-sm">
                            <span class="glyphicon glyphicon-remove-circle"></span>&nbsp;<span data-translate="entity.action.delete"> Delete</span>
                        </button>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
    <uib-pager total-items="totalItems" ng-model="page" ng-change="loadAll()"></uib-pager>
</div>
