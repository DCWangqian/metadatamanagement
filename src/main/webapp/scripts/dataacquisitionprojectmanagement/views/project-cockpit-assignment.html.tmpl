<md-card>
	<md-card-header>
		<md-card-header-text>
			<span class="md-headline">
				<a ui-sref="search({type: group})">
					{{'data-acquisition-project-management.project-cockpit.requirements.'+group | translate}}
				</a>
				<span ng-if="count !== null">({{count}})</span>
				<span ng-switch="!!project.configuration[group+'State'].dataProviderReady + !!project.configuration[group+'State'].publisherReady">
					<span ng-switch-when="0">
						<md-icon>sentiment_very_dissatisfied</md-icon>
					</span>
					<span ng-switch-when="2">
						<md-icon>sentiment_very_satisfied</md-icon>
					</span>
					<span ng-switch-default>
						<md-icon>sentiment_satisfied</md-icon>
					</span>
				</span>
			</span>
		</md-card-header-text>
	</md-card-header>
	<md-card-content>
		<md-switch ng-model="project.configuration.requirements[group+'Required']" ng-disabled="true">
			{{'data-acquisition-project-management.project-cockpit.config.expected' | translate}}
		</md-switch>
		<md-switch ng-model="project.configuration[group+'State'].dataProviderReady">
			{{'data-acquisition-project-management.project-cockpit.label.ROLE_DATA_PROVIDER' | translate}}
			{{'data-acquisition-project-management.project-cockpit.config.ready' | translate}}
		</md-switch>
		<md-switch ng-model="project.configuration[group+'State'].publisherReady">
			{{'data-acquisition-project-management.project-cockpit.label.ROLE_PUBLISHER' | translate}}
			{{'data-acquisition-project-management.project-cockpit.config.ready' | translate}}
		</md-switch>
	</md-card-content>
	<md-card-actions layout="row" layout-align="end center">
		<a ng-click="create()"><md-button
			ng-disabled="project.configuration[group+'State'].dataProviderReady && project.configuration[group+'State'].publisherReady"
		>{{'data-acquisition-project-management.project-cockpit.config.new' | translate}}</md-button></a>
	</md-card-actions>
</md-card>
