<md-card style="margin-top:8px;">
	<md-card-content>
		<p>
			<project-status-label assignee-group="{{project.assigneeGroup}}"></project-status-label>
		</p>
		<p class="layout-row" layout-align="space-between center">
			<span ng-if="project.release">
				<md-icon md-font-set="material-icons" class="fdz-released">check_circle</md-icon>
				<span>{{'global.toolbar.released' | translate}}</span>
			</span>
			<span ng-if="!project.release">
				<md-icon md-font-set="material-icons" class="fdz-not-released">cancel</md-icon>
				<span>{{'global.toolbar.not-released' | translate}}</span>
			</span>
			<span flex></span>
			<md-button class="md-primary md-raised md-icon-button" style="margin-right: 0px;" ng-disabled="!project" ng-click="toggleReleaseProject()" data-has-authority="ROLE_PUBLISHER">
				<md-tooltip ng-hide="!project" md-direction="bottom" md-autohide="true" md-z-index="bowser.mobile || bowser.tablet ? -100 : 100">
					{{project.release?'global.tooltips.unrelease-project':'global.tooltips.release-project' | translate}}
				</md-tooltip>
				<md-icon md-font-set="material-icons">{{project.release?'stop_screen_share':'screen_share'}}</md-icon>
			</md-button>
		</p>
	</md-card-content>
</md-card>
<md-divider></md-divider>
<div layout-gt-sm="row" layout="column" layout-wrap>
	<project-cockpit-assignment group="studies" icon="assets/images/icons/study.svg" createstate="studyCreate" searchstate="studies"></project-cockpit-assignment>
	<project-cockpit-assignment group="surveys" icon="assets/images/icons/survey.svg" createstate="surveyCreate" searchstate="surveys"></project-cockpit-assignment>
	<project-cockpit-assignment group="instruments" icon="assets/images/icons/instrument.svg" createstate="instrumentCreate" searchstate="instruments"></project-cockpit-assignment>
	<project-cockpit-assignment group="questions" icon="assets/images/icons/question.svg" searchstate="questions">
        <md-button ng-disabled="project.configuration.questionsState.dataProviderReady && project.configuration.questionsState.publisherReady"
                   type="file" ngf-select="uploadQuestions($files)" directory webkitdirectory ngf-multiple="true" class="md-primary">
            {{'data-acquisition-project-management.project-cockpit.config.upload' | translate}}
        </md-button>
    </project-cockpit-assignment>
	<project-cockpit-assignment group="dataSets" icon="assets/images/icons/data-set.svg" createstate="dataSetCreate" searchstate="data_sets"></project-cockpit-assignment>
	<project-cockpit-assignment group="variables" icon="assets/images/icons/variable.svg" searchstate="variables">
        <md-button ng-disabled="project.configuration.variablesState.dataProviderReady && project.configuration.variablesState.publisherReady"
                   type="file" ngf-select="uploadVariables($files)" directory webkitdirectory ngf-multiple="true" class="md-primary">
            {{'data-acquisition-project-management.project-cockpit.config.upload' | translate}}
        </md-button>
    </project-cockpit-assignment>
</div>
