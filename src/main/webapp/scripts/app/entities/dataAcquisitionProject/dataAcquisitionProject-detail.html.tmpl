<div>
    <h2>
        <span data-translate="metadatamanagementApp.dataAcquisitionProject.detail.title">Data Acquisition Project</span>
        {{dataAcquisitionProject.name}}</h2>
    <div class="row">
        <div class="col-md-12">
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th data-translate="entity.detail.field">Field</th>
                            <th data-translate="entity.detail.value">Value</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>
                                <span data-translate="metadatamanagementApp.dataAcquisitionProject.name">Name</span>
                            </td>
                            <td>
                                <span class="form-control-static">{{dataAcquisitionProject.id}}</span>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <uib-accordion close-others="false">
              <uib-accordion-group is-open="dataSetsListIsOpen">
                  <uib-accordion-heading>
                    <div class="row">
                      <div class="col-md-12">
                        <span data-translate="metadatamanagementApp.dataSet.title">DataSets</span>
                        <span class="pull-right">
                          <span class="label label-as-badge label-default">{{elementsCounts.dataSets}}</span>
                          <i class="glyphicon" ng-class="{'glyphicon-chevron-down': dataSetsListIsOpen, 'glyphicon-chevron-right': !dataSetsListIsOpen}"></i>
                        </span>
                      </div>
                    </div>
                  </uib-accordion-heading>
                  <div>
                    <datasetslist params="{dataAcquisitionProjectId: dataAcquisitionProject.id}" current-language="currentLanguage" ></datasetslist>
                  </div>
              </uib-accordion-group>
              <br/>
              <uib-accordion-group is-open="surveysListIsOpen" ng-if="elementsCounts.waitState">
                  <uib-accordion-heading>
                    <div class="row">
                      <div class="col-md-12">
                        <span data-translate="metadatamanagementApp.survey.home.title">Surveys</span>
                        <span class="pull-right">
                          <span class="label label-as-badge label-default">{{elementsCounts.surveys}}</span>
                          <i class="glyphicon" ng-class="{'glyphicon-chevron-down': surveysListIsOpen, 'glyphicon-chevron-right': !surveysListIsOpen}"></i>
                        </span>
                      </div>
                    </div>
                  </uib-accordion-heading>
                  <div>
                    <surveyslist params="{dataAcquisitionProjectId: dataAcquisitionProject.id}" current-language="currentLanguage" ></surveyslist>
                  </div>
              </uib-accordion-group>
              <div ng-if="!elementsCounts.waitState">
                <h1>Waiiiiiiiit....</h1>
              </div>
              <br/>
              <uib-accordion-group is-open="variablesListIsOpen">
                  <uib-accordion-heading>
                    <div class="row">
                      <div class="col-md-12">
                        <span data-translate="metadatamanagementApp.variable.home.title">Variablen</span>
                        <span class="pull-right">
                          <span class="label label-as-badge label-default">{{elementsCounts.variables}}</span>
                          <i class="glyphicon" ng-class="{'glyphicon-chevron-down': variablesListIsOpen, 'glyphicon-chevron-right': !variablesListIsOpen}"></i>
                        </span>
                      </div>
                    </div>
                  </uib-accordion-heading>
                  <div>
                    <variableslist params="{dataAcquisitionProjectId: dataAcquisitionProject.id}" current-language="currentLanguage" ></variableslist>
                  </div>
              </uib-accordion-group>
              <br/>
              <div class="row">
                  <div class="col-md-12">
                      <button type="submit" onclick="window.history.back()" class="btn btn-info">
                          <span class="glyphicon glyphicon-arrow-left"></span>&nbsp;
                          <span data-translate="entity.action.back">
                              Back</span>
                      </button>
                      <button type="file" class="btn btn-default" ngf-select="onTexTemplateUpload($file)" accept=".tex">
                          <span class="glyphicon glyphicon-book"></span>
                          {{'metadatamanagementApp.dataAcquisitionProject.detail.generate' | translate}}
                      </button>
                      <button type="file" class="btn btn-default" ngf-select="onSurveyUpload($file)" accept=".xlsx">
                          <span class="glyphicon glyphicon-cloud-upload"></span>
                          {{'metadatamanagementApp.dataAcquisitionProject.detail.upload.surveys' | translate}}</button>
                      <button type="file" class="btn btn-default" ngf-select="onDataSetUpload($file)" accept=".xlsx">
                              <span class="glyphicon glyphicon-cloud-upload"></span>
                              {{'metadatamanagementApp.dataAcquisitionProject.detail.upload.datasets' | translate}}</button>
                      <button type="file" class="btn btn-default" ngf-select="onVariablesUpload($file)" accept=".zip">
                              <span class="glyphicon glyphicon-cloud-upload"></span>
                              {{'metadatamanagementApp.dataAcquisitionProject.detail.upload.variables' | translate}}</button>
                  </div>
              </div>
              <br/>
                <uib-accordion-group is-open="isOpen">
                    <uib-accordion-heading>
                      <div class="row">
                        <div class="col-md-2">
                          <span>{{'metadatamanagementApp.dataAcquisitionProject.detail.uploadprotocol' | translate}} </span>
                        </div>
                        <div class="col-md-3">
                          <span class="pull-right" data-translate="metadatamanagementApp.dataAcquisitionProject.detail.progress">Progress:</span>
                        </div>
                        <div class="col-md-4">
                          <uib-progressbar value="uploadStatus.getProgress()" max="uploadStatus.itemsToUpload" type="{{uploadStatus.getResult()}}" style="margin-bottom: 0px">{{uploadStatus.getProgressState()}}</uib-progressbar>
                        </div>
                        <div class="col-md-3">
                          <span class="pull-right">
                            <span class="label label-as-badge label-success">{{'metadatamanagementApp.dataAcquisitionProject.detail.success' | translate}}: {{uploadStatus.successes}}</span>
                            <span class="label label-as-badge label-danger">{{'metadatamanagementApp.dataAcquisitionProject.detail.error' | translate}}: {{uploadStatus.errors}}</span>
                            <i class="glyphicon" ng-class="{'glyphicon-chevron-down': isOpen, 'glyphicon-chevron-right': !isOpen}"></i>
                          </span>
                        </div>
                      </div>
                    </uib-accordion-heading>
                    <div>
                      <pre><span ng-repeat="logMessage in uploadStatus.logMessages track by $index" ng-class="{'text-danger': logMessage.type==='error'}">{{logMessage.message}}</span></pre>
                    </div>
                </uib-accordion-group>
              </uib-accordion>
            </div>
        </div>
    </div>
