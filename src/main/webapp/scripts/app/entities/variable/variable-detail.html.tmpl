<div ng-if="variable.$resolved">
    <h2>
        <span data-translate="metadatamanagementApp.variable.detail.title">Variable</span>
        {{variable.id}}</h2>

    <div class="row">
        <div class="col-md-5">
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th data-translate="entity.detail.field">Field</th>
                            <th data-translate="entity.detail.value">Value</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>
                                <span data-translate="global.field.rdcId">rdcId</span>
                            </td>
                            <td>
                                <span class="form-control-static">{{variable.id}}</span>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <span data-translate="metadatamanagementApp.variable.dataAcquisitionProjectId">RDC Proect Name</span>
                            </td>
                            <td>
                                <span class="form-control-static">{{variable.dataAcquisitionProjectId}}</span>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <span data-translate="metadatamanagementApp.variable.surveyId">SurveyId</span>
                            </td>
                            <td>
                                <span class="form-control-static">{{variable.surveyId}}</span>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <span data-translate="metadatamanagementApp.variable.name">Name</span>
                            </td>
                            <td>
                                <span class="form-control-static">{{variable.name}}</span>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <span data-translate="metadatamanagementApp.variable.dataType">DataType</span>
                            </td>
                            <td>
                                <span class="form-control-static" data-translate="{{'metadatamanagementApp.DataType.' + variable.dataType}}">{{variable.dataType}}</span>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <span data-translate="metadatamanagementApp.variable.scaleLevel">ScaleLevel</span>
                            </td>
                            <td>
                                <span class="form-control-static" data-translate="{{'metadatamanagementApp.ScaleLevel.' + variable.scaleLevel}}">{{variable.scaleLevel}}</span>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <span data-translate="metadatamanagementApp.variable.label">Label</span>
                            </td>
                            <td>
                                <span class="form-control-static">{{variable.label}}</span>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>


        </div>
        <div class="col-md-5">
          <nvd3 options='optionsAbsoluteFrequencyChart' data='dataFrequencyCharts'></nvd3>
          <nvd3 options='optionsRelativeFrequencyChart' data='dataFrequencyCharts'></nvd3>
        </div>
        <div class="col-md-2">
          <nvd3 options="optionsBoxPlot" data="dataBoxPlot"></nvd3>
        </div>
  </div>
    <div class="row">
        <iframe ng-src="{{'pdfviewer/web/viewer.html?file=/questionnaires/FB_2005.1_Variablenplan.pdf' + '#phrase=false&search=' + variable.name }}" style="padding: 0; width:100%;height:600px; scrolling:auto; target:'_top'"></iframe>
    </div>
    <div class="row">
        <button type="submit" onclick="window.history.back()" class="btn btn-info">
            <span class="glyphicon glyphicon-arrow-left"></span>&nbsp;
            <span data-translate="entity.action.back">
                Back</span>
        </button>
    </div>
</div>
