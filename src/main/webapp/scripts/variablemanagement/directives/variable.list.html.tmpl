<div class="list-group">
    <a ng-repeat="variable in currentPage._embedded.variables" ui-sref="variable.detail({id:variable.id})" class="list-group-item">
        <h4 class="list-group-item-heading">{{variable.name}}</h4>
        <p class="list-group-item-text">
            <strong>{{'metadatamanagementApp.variable.label' |translate}}:</strong>
            {{variable.label[currentLanguage]}}</p>
        <p class="list-group-item-text">
            <strong>{{'metadatamanagementApp.variable.description' |translate}}:</strong>
            {{variable.description[currentLanguage]}}</p>
    </a>
</div>
<div class="col-md-12 col-md-offset-3">
    <uib-pagination
        total-items="pageState.totalElements"
        ng-model="pageState.currentPageNumber"
        ng-change="pageChanged()"
        max-size="pageState.maxSize"
        class="pagination-sm"
        boundary-links="true"
        boundary-link-numbers="true"
        rotate="true"
        previous-text="{{'pager.previous' | translate}}"
        next-text="{{'pager.next' | translate}}"
        first-text="{{'pager.first' | translate}}"
        last-text="{{'pager.last' | translate}}"></uib-pagination>
</div>
<div ng-if="!currentPage.$resolved">
    <loading></loading>
</div>
