<div ng-if="!variable.$resolved" ng-init="startBlockUI()">
    Lade Daten...
</div>
<div ng-if="variable.$resolved" ng-init="stopBlockUI()">
    <md-card>
        <md-card-header>
            <md-card-header-text>
                <h1>{{'variable-management.detail.variable' | translate }}: {{variable.label[currentLanguage]}}</h1>
            </md-card-header-text>
        </md-card-header>
        <md-card-content class="md-padding" layout="column">
            <div layout="row" layout-xs="column" flex>
              <md-card flex="50" flex-xs="100">
                <md-card-header>
                        <md-card-header-text>
                            <span class="md-headline">{{'variable-management.detail.variable-informations' | translate }}</span>
                        </md-card-header-text>
                    </md-card-header>
                    <md-content style="background-color:white;">
                        <section>
                        </section>
                        <section>
                        </section>
                        <section>
                        </section>
              </md-content>
              </md-card>
              <md-card flex="50" flex-xs="100">
                <md-card-header>
                        <md-card-header-text>
                            <span class="md-headline">{{'variable-management.detail.related-informations' | translate }}</span>
                        </md-card-header-text>
                    </md-card-header>
                    <md-content style="background-color:white;">
                        <section>
                            <md-button ng-disabled="true">
                                <section>
                                    <md-icon md-svg-src="/assets/images/icons/study.svg" class="fdz-detail-icon"></md-icon>
                                    <span>{{'study-management.home.title' | translate }}</span>
                                </section>
                            </md-button>
                            <md-button ng-disabled="true" ng-click="addToNotepad('suf-1')">
                                <section>
                                    <md-icon md-svg-src="/assets/images/icons/addToshop.svg" class="fdz-detail-icon"></md-icon>
                                    <span>{{'notepad-management.home.title' | translate }}</span>
                                </section>
                            </md-button>
                        </section>
                        <section>
                            <md-button ng-click="showSurveys()">
                                <section>
                                    <md-icon md-svg-src="/assets/images/icons/survey.svg" class="fdz-detail-icon"></md-icon>
                                    <span>{{'survey-management.home.title' | translate }}</span>
                                </section>
                            </md-button>
                        </section>
                        <section>
                            <md-button ng-disabled="true" ng-click="showQuestion()">
                                <section>
                                    <md-icon md-svg-src="/assets/images/icons/question.svg" class="fdz-detail-icon"></md-icon>
                                    <span>{{'question-management.home.title' | translate }}</span>
                                </section>
                            </md-button>
                        </section>
                        <section>
                            <md-button ng-click="showDataSets()">
                                <section>
                                    <md-icon md-svg-src="/assets/images/icons/data-set.svg" class="fdz-detail-icon"></md-icon>
                                    <span>{{'data-set-management.home.title' | translate }}</span>
                                </section>
                            </md-button>
                        </section>
                        <section>
                            <md-button ng-disabled="true" ng-click="showRelatedPublications()">
                                <section>
                                    <md-icon md-svg-src="/assets/images/icons/variable.svg" class="fdz-detail-icon"></md-icon>
                                    <span>Related Publications</span>
                                </section>
                            </md-button>
                        </section>
              </md-content>
            </md-card>
            </div>
            <div layout="row" layout-xs="column" flex>
              <md-card flex="50" flex-xs="100">
                <md-card-header>
                  <md-card-header-text>
                    <span class="md-headline">{{'variable-management.detail.histogram' | translate }}</span>
                  </md-card-header-text>
                </md-card-header>
                <md-content style="background-color:white;">
                </md-content>
              </md-card>
              <md-card flex="50" flex-xs="100">
                <md-card-header>
                  <md-card-header-text>
                    <span class="md-headline">{{'variable-management.detail.statistics' | translate }}</span>
                  </md-card-header-text>
                  </md-card-header>
                  <md-content style="background-color:white;">
                  </md-content>
              </md-card>
            </div>
            <div layout="row" layout-xs="column" flex>
              <md-card flex="100">
                <md-card-header>
                  <md-card-header-text>
                    <span class="md-headline">{{'variable-management.detail.frequencies' | translate }}</span>
                  </md-card-header-text>
                </md-card-header>
                <md-content style="background-color:white;">
                  <md-table-container>
                    <table md-table>
                      <thead md-head md-order="query.order">
                        <tr md-row>
                          <th md-column style="text-align:center;"><span>Value</span></th>
                          <th md-column style="text-align:center;"><span>Label</span></th>
                          <th md-column style="text-align:center;">M</th>
                          <th md-column style="text-align:center;">Absolute Frequency</th>
                          <th md-column style="text-align:center;">Valid Relative Frequency</th>
                          <th md-column style="text-align:center;">Relative Frequency</th>
                        </tr>
                     </thead>
                     <tbody md-body>
                       <tr md-row ng-repeat="row in frequencies">
                         <td md-cell style="text-align:center;">{{row.value}}{{row.code}}</td>
                         <td md-cell style="text-align:center;">{{row.label[currentLanguage]}}</td>
                         <td md-cell style="text-align:center;">{{row.code ? 'm' : ''}}</td>
                         <td md-cell style="text-align:center;">{{row.absoluteFrequency}}</td>
                         <td md-cell style="text-align:center;">{{row.validRelativeFrequency}}</td>
                         <td md-cell style="text-align:center;">{{row.relativeFrequency}}</td>
                      </tr>
                    </tbody>
                  </table>
                </md-table-container>
                <md-table-pagination md-limit="query.limit" md-limit-options="[5, 10, 15]"
                                     md-page="query.page" md-total="{{query.count}}" md-on-paginate="getStatistics"
                                     md-page-select>
                </md-table-pagination>
                </md-content>
              </md-card>
            </div>
            <div layout="row" layout-xs="column" flex>
              <md-card flex="100">
                <md-card-header>
                  <md-card-header-text>
                    <span class="md-headline">{{'variable-management.detail.generation-details' | translate }}</span>
                  </md-card-header-text>
                </md-card-header>
                <md-content style="background-color:white;">
                </md-content>
              </md-card>
            </div>
        </md-card-content>
    </md-card>
</div>
