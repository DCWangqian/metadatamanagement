<md-toolbar ng-controller="ToolbarController" md-whiteframe="4">
    <div class="md-toolbar-tools" layout="row">
        <md-button class="md-primary md-raised md-hue-1 md-icon-button" hide-gt-md ng-click="toggleLeft()">
            <md-icon md-font-set="material-icons">menu</md-icon>
        </md-button>
        <h1 class="md-headline fdz-truncate-string" flex>{{pageTitle | translate }}</h1>
        <md-button class="md-primary md-raised md-hue-1" style="min-width: 36px;" ng-click="changeLanguage('en')" ng-if="currentLanguage!='en'">
            <span class="fdz-flag-icon fdz-flag-icon-gb"></span>
            <span hide-xs>English</span>
        </md-button>
        <md-button class="md-primary md-raised md-hue-1" style="min-width: 36px;" ng-click="changeLanguage('de')" ng-if="currentLanguage!='de'">
            <span class="fdz-flag-icon fdz-flag-icon-de"></span>
            <span hide-xs>Deutsch</span>
        </md-button>
    </div>
</md-toolbar>
