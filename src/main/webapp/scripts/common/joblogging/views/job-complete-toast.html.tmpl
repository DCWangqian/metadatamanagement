<md-toast class="fdz-toast" layout="row" layout-align="end center">
    <span style= "color: white;" class="fdz-truncate-string" data-translate="{{resultMessage}}" translate-values="{{translationParams}}"></span>
      <md-button aria-label="{{'global.joblogging.job-complete-toast.show-log'| translate}}"  class="md-accent md-raised md-hue-1" ng-click="showLog()"
      ng-class="{'md-icon-button': $mdMedia('xs')}" >
          <md-tooltip>
              {{'global.joblogging.job-complete-toast.show-log' | translate}}
          </md-tooltip>
          <md-icon md-svg-src="/assets/images/icons/show.svg"></md-icon>
          <span style= "color: white;" class="fdz-hide-text-button" data-translate="global.joblogging.job-complete-toast.show-log">Show log</span>
      </md-button>
      <md-button aria-label="{{'global.buttons.close' | translate}}"  class="md-primary md-raised md-hue-1" ng-click="closeToast()"
      ng-class="{'md-icon-button': $mdMedia('xs')}" >
          <md-tooltip>
              {{'global.buttons.close' | translate}}
          </md-tooltip>
          <md-icon md-svg-src="/assets/images/icons/close.svg"></md-icon>
          <span style= "color: white;" class="fdz-hide-text-button" data-translate="global.buttons.close">Close</span>
      </md-button>
</md-toast>
