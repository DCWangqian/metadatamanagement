<div ng-controller="NavbarController" ng-switch="isAuthenticated()">
    <md-sidenav class="md-sidenav-left" md-component-id="left" md-is-locked-open="$mdMedia('gt-md')" md-disable-backdrop md-whiteframe="4">

        <header class="nav-header">
            <a ui-sref="home" title="{{'global.rdcAltText'|translate}}">
                <img src="assets/images/FDZ_Logo.svg" style="width:95%;" alt>
                <span class="sr-only">FDZ</span>
            </a>
        </header>
        <md-content flex role="navigation">
            <ul class="side-menu">
                <li ui-sref-active="active" ng-switch-when="true" class="parent-list-item dropdown pointer">
                    <md-button class="md-button" ng-disabled="true">
                        <span data-translate="global.menu.entities.main"></span>
                    </md-button>
                    <ul class="menu-toggle-list">
                        <li ui-sref-active="active">
                            <md-button class="md-button md-default-theme" ui-sref="dataAcquisitionProject">
                                <span data-translate="global.menu.entities.rdcProject">RDC Projects</span>
                            </md-button>
                        </li>
                        <li ui-sref-active="active">
                            <md-button class="md-button md-default-theme" ui-sref="dataSet">
                                <span data-translate="global.menu.entities.dataSet">DataSets</span>
                            </md-button>
                        </li>
                        <li ui-sref-active="active">
                            <md-button class="md-button md-default-theme" ui-sref="survey">
                                <span data-translate="global.menu.entities.survey">Surveys</span>
                            </md-button>
                        </li>
                        <li ui-sref-active="active">
                            <md-button class="md-button md-default-theme" ui-sref="variable({page: '1'})">
                                <span data-translate="global.menu.entities.variable">Variables</span>
                            </md-button>
                        </li>
                        <!-- JHipster will add entities to the menu here -->
                    </ul>
                </li>
                <li ng-class="{active: $state.includes('account')}" class="dropdown pointer">
                    <md-button class="md-button" ng-disabled="true">
                        <span data-translate="global.menu.account.main"></span>
                    </md-button>
                    <ul class="menu-toggle-list">
                        <li ui-sref-active="active" ng-switch-when="true">
                            <md-button class="md-button md-default-theme" ui-sref="settings">
                                <span data-translate="global.menu.account.settings">Settings</span>
                            </md-button>
                        </li>
                        <li ui-sref-active="active" ng-switch-when="true">
                            <md-button class="md-button md-default-theme" ui-sref="password">
                                <span data-translate="global.menu.account.password">Password</span>
                            </md-button>
                        </li>
                        <li ui-sref-active="active" ng-switch-when="true">
                            <md-button class="md-button md-default-theme" ng-click="logout()">
                                <span data-translate="global.menu.account.logout">Sign out</span>
                            </md-button>
                        </li>
                        <li ui-sref-active="active" ng-switch-when="false">
                            <md-button class="md-button md-default-theme" ui-sref="login">
                                <span data-translate="global.menu.account.login">Sign in</span>
                            </md-button>
                        </li>
                        <li ui-sref-active="active" ng-switch-when="false">
                            <md-button class="md-button md-default-theme" ui-sref="register">
                                <span data-translate="global.menu.account.register">Register</span>
                            </md-button>
                        </li>
                    </ul>
                </li>
                <li ng-class="{active: $state.includes('admin')}" ng-switch-when="true" data-has-authority="ROLE_ADMIN">
                    <md-button class="md-button" ng-disabled="true">
                        <span data-translate="global.menu.admin.main"></span>
                    </md-button>
                    <ul class="menu-toggle-list">
                        <li ui-sref-active="active">
                            <md-button class="md-button md-default-theme" ui-sref="user-management">
                                <span data-translate="global.menu.admin.user-management">User management</span>
                            </md-button>
                        </li>
                        <li ui-sref-active="active">
                            <md-button class="md-button md-default-theme" ui-sref="metrics">
                                <span data-translate="global.menu.admin.metrics">Metrics</span>
                            </md-button>
                        </li>
                        <li ui-sref-active="active">
                            <md-button class="md-button md-default-theme" ui-sref="health">
                                <span data-translate="global.menu.admin.health">Health</span>
                            </md-button>
                        </li>
                        <li ui-sref-active="active">
                            <md-button class="md-button md-default-theme" ui-sref="configuration">
                                <span data-translate="global.menu.admin.configuration">Configuration</span>
                            </md-button>
                        </li>
                        <li ui-sref-active="active">
                            <md-button class="md-button md-default-theme" ui-sref="logs">
                                <span data-translate="global.menu.admin.logs">Logs</span>
                            </md-button>
                        </li>
                    </ul>
                </li>
                <li ui-sref-active="active">
                    <md-button class="md-button md-default-theme" ui-sref="disclosure">
                        <span data-translate="global.menu.disclosure">Disclosure</span>
                    </md-button>
                </li>
                <li ui-sref-active="active" class="dropdown pointer" ng-controller="LanguageController">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="">
                        <span>
                            <span class="glyphicon glyphicon-flag"></span>
                            <span class="hidden-sm" data-translate="global.menu.language">Language</span>
                            <b class="caret"></b>
                        </span>
                    </a>
                    <ul class="dropdown-menu">
                        <li data-active-menu="{{language}}" ng-repeat="language in languages">
                            <a href="" ng-click="changeLanguage(language)" data-toggle="collapse" data-target=".navbar-collapse.in">{{language | findLanguageFromKey}}</a>
                        </li>
                    </ul>
                </li>
            </ul>
        </md-content>
    </md-sidenav>
</div>
