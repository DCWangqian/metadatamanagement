<div ng-controller="NavbarController" ng-switch="isAuthenticated()" layout="column">
    <md-sidenav flex md-component-id="SideNavBar" md-is-locked-open="$mdMedia('gt-md')" md-whiteframe="4" tab-index="-1">
        <md-toolbar style="background-color: white;">
            <a ui-sref="home" title="{{'global.rdcAltText'|translate}}">
                <img src="assets/images/FDZ_Logo.svg" style="height: 64px" alt>
                <span class="sr-only">FDZ</span>
            </a>
        </md-toolbar>
        <md-content flex role="navigation">
            <md-divider></md-divider>
            <md-list ng-switch-when="true" data-has-authority="ROLE_USER">
                <md-list-item>
                    <span data-translate="global.menu.entities.main"></span>
                </md-list-item>
                <md-divider></md-divider>
                <md-list-item>
                    <md-button ui-sref="dataAcquisitionProject" class="fdz-menu-button">
                        <span data-translate="global.menu.entities.rdcProject">RDC Projects</span>
                    </md-button>
                </md-list-item>
                <md-list-item>
                    <md-button ui-sref="dataSet" class="fdz-menu-button">
                        <span data-translate="global.menu.entities.dataSet">DataSets</span>
                    </md-button>
                </md-list-item>
                <md-list-item>
                    <md-button ui-sref="survey" class="fdz-menu-button">
                        <span data-translate="global.menu.entities.survey">Surveys</span>
                    </md-button>
                </md-list-item>
                <md-list-item>
                    <md-button ui-sref="variable({page:1})" class="fdz-menu-button">
                        <span data-translate="global.menu.entities.variable">Variables</span>
                    </md-button>
                </md-list-item>
                <md-divider></md-divider>
            </md-list>
            <md-list>
                <md-list-item>
                    <span data-translate="global.menu.account.main"></span>
                </md-list-item>
                <md-divider></md-divider>
                <md-list-item ng-switch-when="true">
                    <md-button ui-sref="settings" class="fdz-menu-button">
                        <span data-translate="global.menu.account.settings">Settings</span>
                    </md-button>
                </md-list-item>
                <md-list-item ng-switch-when="true">
                    <md-button ui-sref="password" class="fdz-menu-button">
                        <span data-translate="global.menu.account.password">Password</span>
                    </md-button>
                </md-list-item>
                <md-list-item ng-switch-when="true">
                    <md-button ng-click="logout()" class="fdz-menu-button">
                        <span data-translate="global.menu.account.logout">Sign out</span>
                    </md-button>
                </md-list-item>
                <md-list-item ng-switch-when="false">
                    <md-button ui-sref="login" class="fdz-menu-button">
                        <span data-translate="global.menu.account.login">Sign in</span>
                    </md-button>
                </md-list-item>
                <md-list-item ng-switch-when="false">
                    <md-button ui-sref="register" class="fdz-menu-button">
                        <span data-translate="global.menu.account.register">Register</span>
                    </md-button>
                </md-list-item>
                <md-divider></md-divider>
            </md-list>
            <md-list ng-switch-when="true" data-has-authority="ROLE_ADMIN">
                <md-list-item>
                    <span data-translate="global.menu.admin.main"></span>
                </md-list-item>
                <md-divider></md-divider>
                <md-list-item>
                    <md-button ui-sref="user-management" class="fdz-menu-button">
                        <span data-translate="global.menu.admin.user-management">User management</span>
                    </md-button>
                </md-list-item>
                <md-list-item>
                    <md-button ui-sref="metrics" class="fdz-menu-button">
                        <span data-translate="global.menu.admin.metrics">Metrics</span>
                    </md-button>
                </md-list-item>
                <md-list-item>
                    <md-button ui-sref="health" class="fdz-menu-button">
                        <span data-translate="global.menu.admin.health">Health</span>
                    </md-button>
                </md-list-item>
                <md-list-item>
                    <md-button ui-sref="configuration" class="fdz-menu-button">
                        <span data-translate="global.menu.admin.configuration">Configuration</span>
                    </md-button>
                </md-list-item>
                <md-list-item>
                    <md-button ui-sref="logs" class="fdz-menu-button">
                        <span data-translate="global.menu.admin.logs">Logs</span>
                    </md-button>
                </md-list-item>
                <md-divider></md-divider>
            </md-list>
            <md-list>
                <md-list-item>
                    <md-button ui-sref="disclosure" class="fdz-menu-button">
                        <span data-translate="global.menu.disclosure">Disclosure</span>
                    </md-button>
                </md-list-item>
                <md-divider></md-divider>
            </md-list>
            <md-list ng-controller="LanguageController" layout="column">
                <md-list-item>
                    <span data-translate="global.menu.language">Language</span>
                </md-list-item>
                <md-divider></md-divider>
                <md-list-item ng-repeat="language in languages">
                    <md-button ng-click="changeLanguage(language)" class="fdz-menu-button">
                        <span>{{language | findLanguageFromKey}}</span>
                    </md-button>
                </md-list-item>
            </md-list>
        </md-content>
    </md-sidenav>
</div>
