<div layout="row" ng-controller="NavbarController" ng-switch="isAuthenticated()">
    <md-sidenav class="site-sidenav md-sidenav-left md-whiteframe-z2 hide-print md-closed ng-isolate-scope md-locked-open" md-component-id="left" hide-print="" md-is-locked-open="$mdMedia('gt-sm')" tabindex="-1">

        <header class="nav-header">
            <a ui-sref="home" title="{{'global.rdcAltText'|translate}}">
                <img src="assets/images/FDZ_Logo.svg" style="width:95%;" alt>
                <span class="sr-only" data-translate="logos.rdc">FDZ</span>
            </a>
        </header>
        <md-content>
            <ul class="side-menu">
                <li ng-repeat="section in vm.menu.sections | authentication:this" class="parent-list-item">
                    <h2 class="menu-heading" ng-if="section.type === 'heading'" id="heading_{{ section.name | nospace }}">
                      {{section.name}}
                    </h2>
                    <menu-link section="section" ng-if="section.type === 'link'"></menu-link>
                    <menu-toggle section="section" ng-if="section.type === 'toggle'"></menu-toggle>
                </li>
            </ul>
        </md-content>
      </md-sidenav>
    </div>
