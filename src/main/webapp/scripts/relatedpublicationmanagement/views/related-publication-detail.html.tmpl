<div>
    <md-card>
        <md-card-header>
            <md-card-header-text>
                <h1>Publikationstitel</h1>
            </md-card-header-text>
        </md-card-header>
        <md-card-content style="padding-top: 0px;" layout="column">
            <div layout="row" layout-sm="column" layout-xs="column">
                <md-card flex>
                    <md-card-header>
                        <md-card-header-text>
                            <span class="md-headline">Informationen im Header</span>
                        </md-card-header-text>
                    </md-card-header>
                    <md-divider></md-divider>
                    <md-card-content>
                      <section>
                            <span style="font-weight: bold;">{{'related-publication-management.detail.citation-text' | translate }}:
                            </span>
                            <span>Zitationstext</span>
                        </section>
                        <section>
                              <span style="font-weight: bold;">{{'related-publication-management.detail.abstract' | translate }}:
                              </span>
                              <span>Abstract</span>
                          </section>
                          <section>
                                <span style="font-weight: bold;">{{'related-publication-management.detail.doi' | translate }}:
                                </span>
                                <span>Eine DOI</span>
                            </section>
                    </md-card-content>
                </md-card>
                <md-card>
                    <md-card-header>
                        <md-card-header-text>
                            <h2 class="md-headline">{{'related-publication-management.detail.related-information' | translate }}</h2>
                        </md-card-header-text>
                    </md-card-header>
                    <md-divider></md-divider>
                    <md-card-content>
                      <section>
                          <md-button class="md-raised" ng-disabled="true" ng-click="showStudy()">
                              <md-icon md-svg-src="/assets/images/icons/study.svg" class="fdz-detail-icon"></md-icon>
                              <span>{{'related-publication-management.detail.study-title' | translate }}</span>
                          </md-button>
                      </section>
                        <section>
                            <md-button class="md-raised" ng-disabled="true" ng-click="showQuestions()">
                                <md-icon md-svg-src="/assets/images/icons/question.svg" class="fdz-detail-icon"></md-icon>
                                <span>{{'related-publication-management.detail.questions-title' | translate }}</span>
                            </md-button>
                        </section>

                        <section>
                            <md-button class="md-raised" ng-disabled="true" ng-click="showVariable()">
                                <md-icon md-svg-src="/assets/images/icons/variable.svg" class="fdz-detail-icon"></md-icon>
                                <span>{{'related-publication-management.detail.variables-title' | translate }}</span>
                            </md-button>
                        </section>
                    </md-card-content>
                </md-card>
            </div>
        </md-card-content>
    </md-card>
</div>
