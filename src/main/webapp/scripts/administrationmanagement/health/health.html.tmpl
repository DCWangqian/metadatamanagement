<div>
    <jh-alert-error></jh-alert-error>
    <h2 data-translate="health.title">Health Checks</h2>

    <p>
        <button type="button" class="btn btn-primary" ng-click="refresh()"><span class="glyphicon glyphicon-refresh"></span>&nbsp;<span data-translate="health.refresh.button">Refresh</span>
        </button>
    </p>

    <table id="healthCheck" class="table table-striped">
        <thead>
            <tr>
                <th class="col-md-6" data-translate="health.table.service">Service Name</th>
                <th class="col-md-2 text-center" data-translate="health.table.action">Action</th>
                <th class="col-md-2 text-center" data-translate="health.table.status">Status</th>
                <th class="col-md-2 text-center" data-translate="health.details.details">Details</th>

            </tr>
        </thead>
        <tbody>
            <tr ng-repeat="health in healthData">
                <td>{{'health.indicator.' + baseName(health.name) | translate}} {{subSystemName(health.name)}}</td>
                <td class="text-center">
                  <button ng-show="health.name==='elasticsearch'" ng-disabled="isRecreatingIndices" type="button" class="btn btn-danger btn-xs" ng-click="recreateAllElasticsearchIndices()" data-translate="health.elasticsearch.reindex">Reindex</button>
                </td>
                <td class="text-center">
                    <span class="label" ng-class="getLabelClass(health.status)">
                        {{'health.status.' + health.status | translate}}
                    </span>
                </td>
                <td class="text-center">
                    <a class="hand" ng-click="showHealth(health)" ng-show="health.details || health.error">
                        <i class="glyphicon glyphicon-eye-open"></i>
                    </a>
                </td>
            </tr>
        </tbody>
    </table>
</div>
