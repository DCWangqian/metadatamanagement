                        <md-icon md-font-set="material-icons">mode_edit</md-icon>
                    </md-button>
                </td>
                <td class="fdz-table-nowrap" style="padding: 0px;">
                    <md-button class="md-primary md-icon-button" ng-click="ctrl.deleteAttachment(row, $index)" style="margin: 0px;">
