<div ng-if="!study.$resolved">
    Lade Daten...
</div>
<div ng-if="study.$resolved">
    <md-card>
        <md-card-header>
            <md-card-header-text>
                <h1>{{study.title[currentLanguage]}}</h1>
            </md-card-header-text>
        </md-card-header>
        <md-card-content class="md-padding" layout="column">

            <div layout="row" layout-xs="column">
              <md-card flex="50" flex-xs="100">
                <md-card-header>
                  <md-card-header-text>
                    <span class="md-headline">{{'study-management.detail.study-informations' | translate }}</span>
                  </md-card-header-text>
                 </md-card-header>
                <md-content style="background-color:white;"></md-content>
              </md-card>
              <md-card flex="50" flex-xs="100">
                <md-card-header>
                  <md-card-header-text>
                    <span class="md-headline">{{'study-management.detail.related-informations' | translate }}</span>
                  </md-card-header-text>
                </md-card-header>
                <md-content style="background-color:white;">
                        <section>
                            <md-button ng-click="addToNotepad()">
                                <section>
                                    <md-icon md-svg-src="/assets/images/icons/addToshop.svg" class="fdz-detail-icon"></md-icon>
                                    <span>{{'notepad-management.home.title' | translate }}</span>
                                </section>
                            </md-button>
                        </section>
                        <section>
                            <md-button ng-click="showSurveys()">
                                <section>
                                    <md-icon md-svg-src="/assets/images/icons/survey.svg" class="fdz-detail-icon"></md-icon>
                                    <span>{{'survey-management.home.title' | translate }}</span>
                                </section>
                            </md-button>
                        </section>
                        <section>
                            <md-button ng-disabled="variable.questionId === undefined" ui-sref="questionDetail({id:variable.questionId})">
                                <section>
                                    <md-icon md-svg-src="/assets/images/icons/question.svg" class="fdz-detail-icon"></md-icon>
                                    <span>{{'question-management.home.title' | translate }}</span>
                                </section>
                            </md-button>
                        </section>
                        <section>
                            <md-button ng-click="showDataSets()">
                                <section>
                                    <md-icon md-svg-src="/assets/images/icons/data-set.svg" class="fdz-detail-icon"></md-icon>
                                    <span>{{'data-set-management.home.title' | translate }}</span>
                                </section>
                            </md-button>
                        </section>
                        <section>
                            <md-button ng-disabled="instrument.questionId === undefined" ui-sref="questionDetail({id:variable.questionId})">
                                <section>
                                    <md-icon md-svg-src="/assets/images/icons/question.svg" class="fdz-detail-icon"></md-icon>
                                    <span>{{'instrument-management.home.title' | translate }}</span>
                                </section>
                            </md-button>
                        </section>
                        <section>
                            <md-button ng-disabled="true">
                                <section>
                                    <md-icon md-svg-src="/assets/images/icons/variable.svg" class="fdz-detail-icon"></md-icon>
                                    <span>Related Publications</span>
                                </section>
                            </md-button>
                        </section>
              </md-content>
            </md-card>
            </div>


            <div layout="row">
              <md-card flex="100">
                <md-card-header>
                  <md-card-header-text>
                    <span class="md-headline">{{'study-management.detail.description' | translate }}</span>
                  </md-card-header-text>
                </md-card-header>
                <md-content style="background-color:white;">
                </md-content>
              </md-card>
            </div>


            <div layout="row" layout-xs="column">
              <md-card flex="50" flex-xs="100">
                <md-card-header>
                  <md-card-header-text>
                    <span class="md-headline">{{'study-management.detail.survey-details' | translate }}</span>
                  </md-card-header-text>
                </md-card-header>
                <md-content style="background-color:white;">
                </md-content>
              </md-card>
              <md-card flex="50" flex-xs="100">
                <md-card-header>
                  <md-card-header-text>
                    <span class="md-headline">{{'study-management.detail.data-set-details' | translate }}</span>
                  </md-card-header-text>
                  </md-card-header>
                  <md-card-content>
                  </md-card-content>
              </md-card>
            </div>

            <div layout="row">
              <md-card flex="100">
                <md-card-header>
                  <md-card-header-text>
                    <span class="md-headline">{{'study-management.detail.instrument-information' | translate }}</span>
                  </md-card-header-text>
                </md-card-header>
                <md-content style="background-color:white;">
                </md-content>
              </md-card>
            </div>
        </md-card-content>
    </md-card>
</div>
